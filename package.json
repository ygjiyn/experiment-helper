{
  "name": "experiment-helper",
  "displayName": "Experiment Helper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eh.pythonVenvs.refresh",
        "title": "Refresh Python Venvs",
        "category": "Experiment Helper",
        "icon": "$(refresh)"
      },
      {
        "command": "eh.pythonVenvs.activate",
        "title": "Activate Python Venv",
        "category": "Experiment Helper",
        "icon": "$(play)"
      },
      {
        "command": "eh.pythonVenvs.deactivate",
        "title": "Deactivate Python Venv",
        "category": "Experiment Helper",
        "icon": "$(primitive-square)"
      }
    ],
    "views": {
      "experiment-helper": [
        {
          "id": "eh.jobs",
          "name": "Jobs",
          "icon": "$(file)"
        },
        {
          "id": "eh.pythonVenvs",
          "name": "Python Venvs",
          "icon": "$(file)"
        },
        {
          "id": "eh.textTransforms",
          "name": "Text Transforms",
          "icon": "$(file)", 
          "visibility": "collapsed"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "eh.pythonVenvs.refresh",
          "when": "view == eh.pythonVenvs",
          "group": "navigation"
        },
        {
          "command": "eh.pythonVenvs.deactivate",
          "when": "view == eh.pythonVenvs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "eh.pythonVenvs.activate",
          "when": "viewItem == pythonVenvItem",
          "group": "inline"
        }
      ]
    },
    "configuration":[
      {
        "title": "Experiment Helper",
        "properties": {
          "eh.pythonVenvs.venvFolderPrefix": {
            "type": "string",
            "default": ".venv"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "experiment-helper",
          "title": "Experiment Helper",
          "icon": "$(check-all)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
