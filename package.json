{
  "name": "experiment-helper",
  "displayName": "Experiment Helper",
  "publisher": "jiyuan-yang",
  "description": "Managing jobs in experiments.",
  "version": "2.0.0",
  "repository": {},
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "experimentHelper.jobControl.submitSingleJob",
        "title": "Submit Single Job",
        "category": "Experiment Helper",
        "icon": "$(arrow-up)"
      },
      {
        "command": "experimentHelper.jobControl.submitMultipleJobs",
        "title": "Submit Multiple Jobs",
        "category": "Experiment Helper",
        "icon": "$(arrow-up)"
      },
      {
        "command": "experimentHelper.jobControl.refresh",
        "title": "Refresh",
        "category": "Experiment Helper",
        "icon": "$(refresh)"
      },
      {
        "command": "experimentHelper.jobControl.deleteSingleJob",
        "title": "Delete Single Job",
        "category": "Experiment Helper",
        "icon": "$(close)"
      },
      {
        "command": "experimentHelper.jobControl.deleteMultipleJobs",
        "title": "Delete Multiple Jobs",
        "category": "Experiment Helper",
        "icon": "$(close)"
      },
      {
        "command": "experimentHelper.jobControl.showJobOutput",
        "title": "Show Job Output",
        "category": "Experiment Helper",
        "icon": "$(pass)"
      },
      {
        "command": "experimentHelper.jobControl.showJobError",
        "title": "Show Job Error",
        "category": "Experiment Helper",
        "icon": "$(error)"
      },
      {
        "command": "experimentHelper.jobControl.showJobScript",
        "title": "Show Job Script",
        "category": "Experiment Helper",
        "icon": "$(file)"
      },
      {
        "command": "experimentHelper.jobControl.showJobStatusDetails",
        "title": "Show Job Status Details",
        "category": "Experiment Helper",
        "icon": "$(list-flat)"
      },
      {
        "command": "experimentHelper.jobControl.copyJupyterUrlToClipboard",
        "title": "Copy Jupyter URL to Clipboard",
        "category": "Experiment Helper",
        "icon": "$(copy)"
      },
      {
        "command": "experimentHelper.jobConfig.setCurrentJobConfig",
        "title": "Set Current Job Config",
        "category": "Experiment Helper",
        "icon": "$(file)"
      },
      {
        "command": "experimentHelper.jobConfig.addJobConfig",
        "title": "Add Job Config", 
        "category": "Experiment Helper",
        "icon": "$(add)"
      },
      {
        "command": "experimentHelper.jobConfig.deleteJobConfig",
        "title": "Delete Job Config",
        "category": "Experiment Helper",
        "icon": "$(close)"
      },
      {
        "command": "experimentHelper.jobConfig.refresh",
        "title": "Refresh",
        "category": "Experiment Helper",
        "icon": "$(refresh)"
      },
      {
        "command": "experimentHelper.otherTools.ChangeTerminalDirectoryToWorkspaceRoot",
        "title": "Experiment Helper: Change Terminal Directory To Workspace Root",
        "category": "Experiment Helper",
        "icon": "$(home)"
      }
    ],
    "views": {
      "experimentHelperJobTools": [
        {
          "id": "experimentHelper.jobControl",
          "name": "Job Control",
          "icon": "$(file)",
          "initialSize": 2
        },
        {
          "id": "experimentHelper.jobConfig",
          "name": "Job Config",
          "icon": "$(file)",
          "initialSize": 1
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "experimentHelper.jobControl",
        "contents": "Check and configure the name of the scripts folder.\n[Open Settings](command:workbench.action.openSettings)"
      },
      {
        "view": "experimentHelper.jobConfig",
        "contents": "Add a new job config.\n[Add Job Config](command:experimentHelper.jobConfig.addJobConfig)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "experimentHelperJobTools",
          "title": "Experiment Helper: Job Tools",
          "icon": "$(check-all)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "experimentHelper.jobControl.submitSingleJob",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.submitMultipleJobs",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.refresh",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.deleteSingleJob",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.deleteMultipleJobs",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.showJobOutput",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.showJobError",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.showJobScript",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.showJobStatusDetails",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobControl.copyJupyterUrlToClipboard",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobConfig.setCurrentJobConfig",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobConfig.addJobConfig",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobConfig.deleteJobConfig",
          "when": "false"
        },
        {
          "command": "experimentHelper.jobConfig.refresh",
          "when": "false"
        },
        {
          "command": "experimentHelper.otherTools.ChangeTerminalDirectoryToWorkspaceRoot",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "experimentHelper.jobControl.refresh",
          "when": "view == experimentHelper.jobControl",
          "group": "navigation@4"
        },
        {
          "command": "experimentHelper.jobControl.submitMultipleJobs",
          "when": "view == experimentHelper.jobControl",
          "group": "navigation@3"
        },
        {
          "command": "experimentHelper.jobControl.deleteMultipleJobs",
          "when": "view == experimentHelper.jobControl",
          "group": "navigation@2"
        },
        {
          "command": "experimentHelper.jobConfig.refresh",
          "when": "view == experimentHelper.jobConfig",
          "group": "navigation@1"
        },
        {
          "command": "experimentHelper.jobConfig.addJobConfig",
          "when": "view == experimentHelper.jobConfig",
          "group": "navigation@0"
        },
        {
          "command": "experimentHelper.otherTools.ChangeTerminalDirectoryToWorkspaceRoot",
          "when": "view == terminal",
          "group": "navigation@-1"
        }
      ],
      "view/item/context": [
        {
          "command": "experimentHelper.jobControl.submitSingleJob",
          "when": "viewItem =~ /^jobItem.*-isSubmitted_false.*/",
          "group": "inline@4"
        },
        {
          "command": "experimentHelper.jobControl.deleteSingleJob",
          "when": "viewItem =~ /^jobItem.*-isSubmitted_true.*/",
          "group": "inline@3"
        },
        {
          "command": "experimentHelper.jobControl.showJobError",
          "when": "viewItem =~ /^jobItem.*-hasErrorLog_true.*/",
          "group": "inline@2"
        },
        {
          "command": "experimentHelper.jobControl.showJobOutput",
          "when": "viewItem =~ /^jobItem.*-hasOutputLog_true.*/",
          "group": "inline@1"
        },
        {
          "command": "experimentHelper.jobControl.copyJupyterUrlToClipboard",
          "when": "viewItem =~ /^jobItem.*-hasJupyterUrl_true.*-isSubmitted_true.*/",
          "group": "inline@0"
        },
        {
          "command": "experimentHelper.jobControl.showJobStatusDetails",
          "when": "viewItem =~ /^jobItem.*-isSubmitted_true.*/",
          "group": "inline@-1"
        },
        {
          "command": "experimentHelper.jobConfig.deleteJobConfig",
          "when": "viewItem == JobConfigItem",
          "group": "inline"
        }
      ]
    },
    "configuration":[
      {
        "title": "Experiment Helper",
        "properties": {
          "experimentHelper.jobControl.scriptsFolderRelativePath": {
            "type": "string",
            "default": "scripts"
          },
          "experimentHelper.jobControl.resultsFolderRelativePath": {
            "type": "string",
            "default": "results"
          },
          "experimentHelper.jobControl.waitDeleteConfirmationSeconds": {
            "type": "number",
            "default": 3
          },
          "experimentHelper.jobControl.jobControlAutoRefreshSeconds": {
            "type": "number",
            "default": 5
          },
          "experimentHelper.jobControl.startJupyterScriptPrefix": {
            "type": "string",
            "default": "start_jupyter"
          },
          "experimentHelper.jobConfig.JobConfigNamesAndContents": {
            "type": "array",
            "default": [
              "h100:-S /bin/bash -cwd -l h100=1,s_vmem=100G -pe def_slot 10",
              "a100:-S /bin/bash -cwd -l a100=1,s_vmem=100G -pe def_slot 10",
              "cpu:-S /bin/bash -cwd -l s_vmem=20G -pe def_slot 3"
            ],
            "items": {
              "type": "string"
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
